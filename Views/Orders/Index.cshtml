@model IEnumerable<CognisunPractical.Data.Domain.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="mt-4">Order List</h1>
    <div>
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
    </div>


    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Category</th>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Shipping Type</th>
                    <th>Total Amount</th>
                    <th>Delivery Date</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                        <td>@Html.DisplayFor(modelItem => item.Product)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.ShippingType)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeliveryDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a asp-action="Edit" asp-route-id="@item.OrderID" class="btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.OrderID" class="btn btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.OrderID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
